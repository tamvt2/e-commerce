{{#if products.length}}
<div class="container">
	<h2 class="text-center mb-4">Danh sách sản phẩm {{#if pagination}}{{pagination.page}}{{else}}1{{/if}}</h2>
	<div class="row">
		{{#each products}}
			<div class="col-sm-6 col-lg-4 mb-4">
				<div class="card">
					<div class="ratio ratio-1x1 mx-auto mt-3" style="max-width: 200px;">
						<img src="{{this.image_url}}" class="card-img-top object-fit-contain" alt="{{this.name}}">
					</div>
					<div class="card-body">
						<div class="average-rating text-warning" id="averageRating_{{this._id}}">
							{{formatAverageRating this.rating}}
						</div>
						<h5 class="card-title">{{this.name}}</h5>
						<p class="card-text">{{this.description}}</p>
						<p class="card-text">{{this.stock}}</p>
						<p class="card-text text-danger">{{formatCurrency this.price}}</p>
						<div class="button d-flex justify-content-between">
							<button type="button" class="btn btn-primary" onclick="addCart('{{this._id}}')">
								Thêm Vào Giỏ Hàng
							</button>
							<button type="button" class="btn btn-primary" onclick="buyCart('{{this._id}}')">
								Mua Ngay
							</button>
						</div>
					</div>
				</div>
			</div>
		{{/each}}
	</div>

	{{#if pagination}}
	<nav aria-label="Page navigation" class="mt-4">
		<ul class="pagination justify-content-center">
			{{#if pagination.hasPrevPage}}
			<li class="page-item">
				<a class="page-link" href="/?page={{subtract pagination.page 1}}" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
				</a>
			</li>
			{{/if}}

			{{#times pagination.totalPages}}
			<li class="page-item {{#if (eq this ../pagination.page)}}active{{/if}}">
				<a class="page-link" href="/?page={{this}}">{{this}}</a>
			</li>
			{{/times}}

			{{#if pagination.hasNextPage}}
			<li class="page-item">
				<a class="page-link" href="/?page={{add pagination.page 1}}" aria-label="Next">
					<span aria-hidden="true">&raquo;</span>
				</a>
			</li>
			{{/if}}
		</ul>
	</nav>
	{{/if}}
</div>
{{/if}}